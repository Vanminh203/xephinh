<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="28dp"
    android:background="@drawable/dialog_background_dark"
    android:gravity="center">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:src="@drawable/you_lost"
        android:contentDescription="You Lost"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME OVER"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textColor="#F44336"
        android:gravity="center"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tv_score_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINAL SCORE"
        android:textSize="16sp"
        android:textColor="#87CEFA"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123,456"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/score_background_dark"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_play_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLAY AGAIN"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_view_high_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="RANKING"
            android:textStyle="bold"
            android:textSize="16sp"
            android:backgroundTint="#FF6B35"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>