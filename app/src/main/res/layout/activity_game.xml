<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E">

    <!--Thanh trên cùng chứa các nút điều khiển-->>
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab_powerup">

        <ImageButton
            android:id="@+id/btn_close_game"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Close"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_volume"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Volume"
                android:src="@drawable/ic_volume"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageButton
                android:id="@+id/btn_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Pause"
                android:src="@drawable/ic_pause"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageButton
                android:id="@+id/btn_restart"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Restart"
                android:src="@drawable/ic_restart"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Action Button for Power-Up Menu-->>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_powerup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_powerup"
        android:contentDescription="Power-Up Menu"
        app:backgroundTint="#FF6B35"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_bar" />

    <!--Game grid với viền bao quanh-->>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_grid_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintEnd_toStartOf="@+id/panel_container"
        app:layout_constraintBottom_toTopOf="@+id/control_panel"
        app:layout_constraintDimensionRatio="1:2">

        <FrameLayout
            android:id="@+id/game_grid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#0F3460"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Updated panel with better styling and added time display
    Panel bên phải chứa Next, Level, Line, Score, Time-->>
    <LinearLayout
        android:id="@+id/panel_container"
        android:layout_width="110dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/control_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <!--Phần Next-->>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_next_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Next"
                android:textColor="#E94560"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold" />

            <com.example.tetrisgamegroup11.ui.game.NextPieceView
                android:id="@+id/next_piece_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />
        </LinearLayout>

        <!--Phần Level-->>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_level_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Level"
                android:textColor="#E94560"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp" />
        </LinearLayout>

        <!--Phần Line-->>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_line_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Line"
                android:textColor="#E94560"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="0" />
        </LinearLayout>

        <!--Phần Score-->>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_score_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Score"
                android:textColor="#E94560"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="0" />
        </LinearLayout>

        <!--Added Time display section
        Phần Time-->>
        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time"
                android:textColor="#E94560"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:text="0:00" />
        </LinearLayout>
    </LinearLayout>

    <!--Updated control panel with better styling
    Bảng điều khiển di chuyển ở dưới cùng-->>
    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <Button
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="70dp"
            android:text="LEFT"
            android:textStyle="bold"
            android:backgroundTint="#E94560"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <Button
                android:id="@+id/btn_rotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="ROTATE"
                android:textStyle="bold"
                android:backgroundTint="#16213E"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:text="DOWN"
                android:textStyle="bold"
                android:backgroundTint="#16213E" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="70dp"
            android:text="RIGHT"
            android:textStyle="bold"
            android:backgroundTint="#E94560"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
