<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A5FF"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_volume"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_volume"
        android:contentDescription="@string/volume_control"
        app:tint="@android:color/holo_red_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/game_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_tetris_game"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/title_background_blue"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintWidth_percent="0.8"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/game_title"
        app:layout_constraintBottom_toTopOf="@id/select_level_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintWidth_percent="0.7">

        <Button
            android:id="@+id/btn_new_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/new_game"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@id/btn_selectmode"
            />

        <Button
            android:id="@+id/btn_selectmode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/select_mode"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_new_game"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_level"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/select_level"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_selectmode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_ranking"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ranking"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_level"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/select_level_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_select_level"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>